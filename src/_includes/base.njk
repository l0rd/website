    <script>
        // Dynamic adjectives functionality
        async function loadAdjectives() {
            try {
                const response = await fetch('/adjectives.json');
                const data = await response.json();
                const adjectives = data.adjectives;

                // Get all elements with class "dynamic-adjective"
                const elements = document.querySelectorAll('.dynamic-adjective');

                // Get one random adjective for all elements
                const randomIndex = Math.floor(Math.random() * adjectives.length);
                const randomAdjective = adjectives[randomIndex];

                elements.forEach(element => {
                    // Apply the same adjective to all elements
                    element.textContent = randomAdjective;
                });
            } catch (error) {
                console.error('Error loading adjectives:', error);
            }
        }

        // Load adjectives when the page loads
        document.addEventListener('DOMContentLoaded', loadAdjectives);

        // Make external links open in a new browser tab
        document.querySelectorAll('a[href^="http"]:not([href*="lorie.do"]):not([href*="localhost"])').forEach(link => {
                link.setAttribute('target', '_blank');
            });
    </script>

    <script>
        // Theme toggle functionality
        const themeToggle = document.querySelector('.theme-toggle');
        const root = document.documentElement;

        // Check for saved theme preference, otherwise use dark theme
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
            root.classList.add(`${savedTheme}-theme`);
            themeToggle.setAttribute('aria-label', savedTheme === 'dark' ? 'Switch to light mode' : 'Switch to dark mode');
        } else {
            // Set dark theme as default
            root.classList.add('dark-theme');
            localStorage.setItem('theme', 'dark');
            themeToggle.setAttribute('aria-label', 'Switch to light mode');
        }

        themeToggle.addEventListener('click', () => {
            // If currently using light theme
            if (root.classList.contains('light-theme')) {
                root.classList.remove('light-theme');
                root.classList.add('dark-theme');
                localStorage.setItem('theme', 'dark');
                themeToggle.setAttribute('aria-label', 'Switch to light mode');
            } else {
                root.classList.remove('dark-theme');
                root.classList.add('light-theme');
                localStorage.setItem('theme', 'light');
                themeToggle.setAttribute('aria-label', 'Switch to dark mode');
            }
        });
    </script>
